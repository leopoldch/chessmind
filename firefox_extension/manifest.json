{
  "manifest_version": 3,
  "name": "Chess.com Move Reporter",
  "version": "1.0",
  "description": "Detects player color and opponent moves on Chess.com and sends them over WebSocket.",
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage","scripting","tabs","webRequest","webRequestBlocking"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  }
}
