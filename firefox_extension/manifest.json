{
  "manifest_version": 3,
  "name": "Chess.com Move Listener",
  "version": "1.1",
  "description": "Envoie la couleur du joueur du bas et chaque coup adverse vers un serveur local WS.",
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/play*",
        "https://www.chess.com/*/play*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://www.chess.com/*"]
}
